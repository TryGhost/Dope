{
    "name": "greymuzzle",
    "description": "A professional journalism theme for investigative reporting in the furry community",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Greymuzzle Investigative Journalism",
        "email": "editor@greymuzzle.net",
        "url": "https://greymuzzle.net"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "journalism",
        "news",
        "investigative",
        "furry"
    ],
    "docs": "https://greymuzzle.net/about/",
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "card_assets": true,
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif",
                    "Newspaper classic"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Elegant serif"
            },
            "color_scheme": {
                "type": "select",
                "options": [
                    "Dark mode",
                    "Light mode",
                    "Auto (system preference)"
                ],
                "default": "Dark mode",
                "group": "homepage"
            },
            "show_author": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_reading_time": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_publication_date": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_updated_date": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "enable_table_of_contents": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "enable_reading_progress": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "whistleblower_link": {
                "type": "text",
                "default": "/submit-tip",
                "group": "homepage"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.2",
        "autoprefixer": "10.4.21",
        "beeper": "2.1.0",
        "cssnano": "7.1.2",
        "gscan": "5.2.0",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.6",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    }
}
